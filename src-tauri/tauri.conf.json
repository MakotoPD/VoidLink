{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "VoidLink",
  "version": "0.3.1",
  "identifier": "pl.makotopd.voidlink",
  "build": {
    "frontendDist": "../.output/public",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "pnpm nuxt generate"
  },
  "app": {
    "windows": [
      {
        "title": "VoidLink",
        "label": "main",
        "width": 1200,
        "height": 850,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 1200,
        "minHeight": 850,
        "dragDropEnabled": false
      
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "default"
      ]
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": [
          "voidlink"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": [
      "binaries/frpc"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}