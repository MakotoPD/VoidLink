{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "MineDash",
  "version": "0.2.1",
  "identifier": "pl.makotopd.minedash",
  "build": {
    "frontendDist": "../.output/public",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "pnpm nuxt generate"
  },
  "app": {
    "windows": [
      {
        "title": "MineDash",
        "label": "main",
        "width": 1200,
        "height": 700,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "default"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}