{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "http:default",
    "http:allow-fetch",
    {
      "identifier": "http:allow-fetch",
      "allow": [
        {
          "url": "https://api.purpurmc.org/*"
        },
        {
          "url": "https://fill.papermc.io/*"
        },
        {
          "url": "https://fill-data.papermc.io/*"
        },
        {
          "url": "https://mcjarfiles.com/**"
        },
        {
          "url": "https://api.modrinth.com/**"
        },
        {
          "url": "https://cdn.modrinth.com/**"
        },
        {
          "url": "https://api.github.com/**"
        },
        {
          "url": "https://api.mojang.com/**"
        },
        {
          "url": "https://meta.fabricmc.net/**"
        },
        {
          "url": "https://maven.fabricmc.net/**"
        },
        {
          "url": "https://meta.quiltmc.org/**"
        },
        {
          "url": "https://piston-meta.mojang.com/**"
        },
        {
          "url": "https://launchermeta.mojang.com/**"
        },
        {
          "url": "https://files.minecraftforge.net/**"
        }
      ]
    },
    "fs:default",
    {
      "identifier": "fs:allow-write-file",
      "allow": [
        {
          "path": "$DOCUMENT/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        {
          "path": "$DOCUMENT/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        {
          "path": "$DOCUMENT/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        {
          "path": "$DOCUMENT/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-read-dir",
      "allow": [
        {
          "path": "$DOCUMENT/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [
        {
          "path": "$DOCUMENT/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$DOCUMENT/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-remove",
      "allow": [
        {
          "path": "$DOCUMENT/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-rename",
      "allow": [
        {
          "path": "$DOCUMENT/**"
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "run-bat",
          "cmd": "cmd",
          "args": [
            {
              "validator": "^/[CK]$"
            },
            {
              "validator": ".+"
            }
          ]
        },
        {
          "name": "run-sh",
          "cmd": "sh",
          "args": [
            "-c",
            {
              "validator": ".+"
            }
          ]
        },
        {
          "name": "run-java",
          "cmd": "java",
          "args": true
        }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "run-java",
          "cmd": "java",
          "args": true
        },
        {
          "name": "run-bat",
          "cmd": "cmd",
          "args": [
            "/C",
            {
              "validator": ".+"
            }
          ]
        },
        {
          "name": "run-sh",
          "cmd": "sh",
          "args": [
            "-c",
            {
              "validator": "\\S+"
            }
          ]
        }
      ]
    },
    "shell:allow-open",
    "shell:allow-stdin-write",
    "dialog:allow-open"
  ],
  "plugins": {
    "shell": {
      "scope": [
        {
          "name": "run-java",
          "cmd": "java",
          "args": true
        },
        {
          "name": "run-bat",
          "cmd": "cmd",
          "args": [
            {
              "validator": "^/[CK]$"
            },
            {
              "validator": ".+"
            }
          ]
        },
        {
          "name": "run-sh",
          "cmd": "sh",
          "args": [
            "-c",
            {
              "validator": ".+"
            }
          ]
        }
      ]
    }
  }
}